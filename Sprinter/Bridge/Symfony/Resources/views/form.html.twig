{% form_theme form 'KonektCourierBundle:Awb:form_theme.html.twig' %}
<link rel="stylesheet" href="/bundles/konektcourier/css/main.css"/>

<div id="awb-modal-form">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Csomag bejegyzés - Sprinter</h4>
            </div>

            {{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'create-awb-form'}}) }}

            <div class="modal-body">

                {% if result %}
                    {% if not result.isSuccess() %}
                        <div class="alert alert-danger alert-dismissable">Hiba: {{ result.getErrorMessage() }}</div>
                    {% endif %}
                {% endif %}

                {{ form_row(form.parcelCount) }}
                {% if form.destinationLocationId is defined %}
                    {{ form_row(form.destinationLocationId) }}
                {% endif %}
                {{ form_row(form.authorizationCode) }}

                {{ form_row(form.customerName) }}
                {{ form_row(form.customerCity) }}
                {{ form_row(form.customerPostalCode) }}
                {{ form_row(form.customerAddress) }}
                {{ form_row(form.customerPhone) }}
                {{ form_row(form.customerEmail) }}

                {{ form_row(form.packagePrice) }}
                {{ form_row(form.priceAtDelivery) }}
                {{ form_row(form.isPartnerInvoiced) }}

                {{ form_row(form.packageType) }}

            </div>
            <div class="modal-footer">
                <div class="input-group-btn">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Mégsem</button>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
    (function ($) {
        $('body').on('submit', '#create-awb-form', function (event) {
            event.preventDefault(); // Prevent the form from submitting via the browser
            var form = $(this);

            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: form.serialize()
            }).done(function (response) {
                var newContent = $($.parseHTML(response)).filter("#awb-modal-form").html();
                $('#awb-modal-form').html(newContent);
                $('#awbModal').animate({scrollTop: 0}, 'fast');
            }).fail(function (data) {
                alert('Error:'.data);
            });
        });

        $('#awbModal').on('hidden.bs.modal', function () {
            if ($('#awb-modal-awb-nr').length) {
                location.reload();
            }
        })
    })(jQuery);
</script>